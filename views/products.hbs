{{#if myProducts.length}}
<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">
      {{#each myProducts}}
      <div class="col-md-4">
        <div class="card mb-4 box-shadow">
          <img class="card-img-top" alt="{{this.title}}" src="{{this.image}}" style="height: 225px; width: 100%; display: block;">
          <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">{{this.description}}</p>
            <div class="d-flex justify-content-between align-items-center mt-3">
              <div>
                <p class="mb-0"><b>{{this.user.name}}</b></p>
              </div>
              <div class="text-right">
                <p class="price mb-0">${{this.price}}</p>
              </div>
            </div>
            <div class="d-flex justify-content-between align-items-center mt-3">
              <div>
                <p class="mb-0">{{this.formattedCreatedAt}}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>
{{/if}}

